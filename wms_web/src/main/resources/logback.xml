<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

	<!-- 控制台输出日志 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%X{logthreadId} [%date{yyyy-MM-dd HH:mm:ss.SSS}] %level %logger{80} [%thread] %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- 文件输出日志 (文件大小策略进行文件输出，每天产生一个日志文件给异常监控平台进行分析) -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/opt/logs/wms-web.log</File>
		<!-- 日志文件rolling策略 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/opt/logs/wms-web_%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<!-- 日志输出格式 -->
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%X{logthreadId} [%date{yyyy-MM-dd HH:mm:ss.SSS}] %level %logger{80} [%thread] %msg%n
			</Pattern>
		</encoder>
	</appender>
	
	<appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
		<discardingThreshold>0</discardingThreshold>
	      <queueSize>10000</queueSize>
	      <appender-ref ref="FILE" />
	</appender>

	<logger name="com.rfd" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</logger>
	
<!-- 	<logger name="com.ibatis" level="DEBUG" />    
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="DEBUG" />    
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="DEBUG" />    
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="DEBUG" />    
	<logger name="java.sql.Connection" level="DEBUG" />    
	<logger name="java.sql.Statement" level="DEBUG" />    
	<logger name="java.sql.PreparedStatement" level="DEBUG" /> -->
	<logger name="com" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</logger>
	<root level="ERROR">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
	
	<logger name="LOG_AUDIT">
		<level value="INFO" />
		<appender-ref ref="CSV_FILE" />
	</logger>
	
	<logger name="BIG_QUERY">
		<level value="INFO" />
		<appender-ref ref="BIG_QUERY" />
	</logger>

	<logger name="org.apache.commons">
		<level value="INFO" />
	</logger>
	
	<root level="${log.level}">
		<appender-ref ref="${log.target}" />
	</root>
</configuration>
